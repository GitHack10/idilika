<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewItem"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_margin="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleItem"
            android:text="title"
            android:textStyle="bold"
            android:layout_below="@id/imageViewItem"
            android:layout_marginStart="16dp"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textItem"
            android:text="text"
            android:layout_below="@id/titleItem"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/priceItem"
            android:layout_below="@id/textItem"
            android:text="2324"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textSize="13sp"/>

        <CheckBox
            android:id="@+id/checkbox_favorite_item"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/textItem"
            android:button="@drawable/ic_favorite_off"
            android:background="@drawable/checkbox_selection"
            android:layout_alignEnd="@id/imageViewItem"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>